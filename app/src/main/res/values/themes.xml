<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MitBe" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/redsoft</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeBebas" parent="Theme.MitBe">
        <item name="colorPrimary">@color/heavychocolate</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeBarPanicButton" parent="Theme.MitBe">
        <item name="colorPrimary">@color/heavychocolate</item>
        <item name="colorPrimaryVariant">@color/heavychocolate</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>